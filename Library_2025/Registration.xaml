<Page x:Class="Library_2025.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library_2025"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Registration">

    <Grid Background="#ffdadada">
        <Border MinWidth="400" Margin="15" Background="White" VerticalAlignment="Center" Padding="30" MaxWidth="550" CornerRadius="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="LightGray" ShadowDepth="0"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Добро пожаловать!" FontSize="30" FontWeight="Bold" Margin="0 0 0 20"/>
                <Grid Margin="0 0 0 20">
                    <Button HorizontalAlignment="Left" Content="Авторизация" Click="Button_Click"/>
                </Grid>
                <TextBox x:Name="textBoxLogin" TextWrapping="Wrap" Text="" Width="490" ToolTip="Введите логин" />
                <PasswordBox x:Name="passBox"  Width="490" ToolTip="Введите пароль" />
                <PasswordBox x:Name="passBox_2" Width="490" ToolTip="Повторите пароль" />
                <TextBox x:Name="textBoxEmail" TextWrapping="Wrap" Text="" Width="490" ToolTip="Email" />

                <!--<TextBox materialDesign:HintAssist.Hint="Введите логин"  TextWrapping="Wrap" ToolTip="Click to submit your information"   />
             <PasswordBox materialDesign:HintAssist.Hint="Введите пароль" />
             <PasswordBox materialDesign:HintAssist.Hint="Повторите пароль" />
             <TextBox materialDesign:HintAssist.Hint="Email" />-->
                <Button Content="Зарегестрироваться" Margin="0 20" Click="Button_Reg_Click" Background="MediumPurple" Foreground="#ffdadada"/>


            </StackPanel>
        </Border>
    </Grid>
</Page>