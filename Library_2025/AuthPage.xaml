<Page x:Class="Library_2025.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library_2025"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid Background="#ffdadada">
        <Border MinWidth="400" Margin="15" Background="White" VerticalAlignment="Center" Padding="30" MaxWidth="550" CornerRadius="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="LightGray" ShadowDepth="0"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Добро пожаловать!" FontSize="30" FontWeight="Bold" Margin="0 0 0 20"/>
                <Grid Margin="0 0 0 20">
                    <Button HorizontalAlignment="Left" Content="Регистрация" Click="Button_Click" />
                </Grid>
                <TextBox x:Name="textBoxLogin" TextWrapping="Wrap" Text="" Width="490" ToolTip="Введите логин" />
                <PasswordBox x:Name="passBox"  Width="490" ToolTip="Введите пароль" />
                <Button Content="Войти" Margin="0 20" Background="MediumPurple" Foreground="#ffdadada" Click="ButtonEnter_OnClick"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
