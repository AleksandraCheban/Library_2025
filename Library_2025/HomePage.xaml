<Page x:Class="Library_2025.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library_2025"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Button x:Name="Products" Content="Пользователи" Grid.Row="0" Width="133" Background="White" Click="Users_Click" />
        <Button x:Name="Supplies" Content="Книги" Grid.Row="1" Width="133" Background="White" Click="Books_Click" />
        <Button x:Name="Sales" Content="Заказы" Grid.Row="2" Width="133" Background="White" Click="Orders_Click" />
        <Button x:Name="Employees" Content="Издатели" Grid.Row="3" Width="133" Background="White" Click="Publishers_Click" />
    </Grid>
</Page>
