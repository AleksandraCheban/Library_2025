<Page x:Class="Library_2025.PageForAdmin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library_2025"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
        Title="PageForClient"
  Background="White">
    <!-- Установите фоновый цвет для Page -->

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Button x:Name="Books" Content="Книги" Grid.Row="0" Width="133" Background="White" Click="Books_Click" />
        <Button x:Name="Orders" Content="Заказы" Grid.Row="1" Width="133" Background="White" Click="Orders_Click" />
        <Button x:Name="Auth" Content="Сменить пользователя" Grid.Row="4" Width="133" Background="White" Click="Auth_Click" />
        <Button x:Name="Availability" Content="Наличие" Grid.Row="3" Width="133" Background="White" Click="Availability_Click" />
        <Button x:Name="Users" Content="Пользователи" Grid.Row="2" Width="133" Background="White" Click="Availability_Click" />

    </Grid>
</Page>
