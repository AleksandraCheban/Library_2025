<Page x:Class="Library_2025.PageForAdmin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library_2025"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
        Title="PageForClient"
    Background="#ffdadada">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Border MinWidth="400" Margin="15" Background="White" Padding="30" MaxWidth="550" CornerRadius="20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="30" Color="LightGray" ShadowDepth="0"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Меню администратора" FontSize="30" FontWeight="Bold" Margin="0 0 0 20"/>
                    <Button x:Name="Books" Content="Книги" Width="400" Height="50" Margin="0 10 0 0" Style="{StaticResource Button_Purple_Style}" Click="Books_Click" />
                    <Button x:Name="Orders" Content="Заказы" Width="400" Height="50" Margin="0 10 0 0" Style="{StaticResource Button_Purple_Style}" Click="Orders_Click" />
                    <Button x:Name="Users" Content="Пользователи" Width="400" Height="50" Margin="0 10 0 0" Style="{StaticResource Button_Purple_Style}" Click="Users_Click" />
                    <Button x:Name="Availability" Content="Наличие" Width="400" Height="50" Margin="0 10 0 0" Style="{StaticResource Button_Purple_Style}" Click="Availability_Click" />
                    <Button x:Name="Auth" Content="Сменить пользователя" Width="400" Height="50" Margin="0 10 0 0" Click="Auth_Click" Style="{StaticResource Button_Common_Style}" />
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</Page>