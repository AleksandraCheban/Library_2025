<Page x:Class="Library_2025.MyOrders"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library_2025"
       mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="MyOrders"
      Background="AliceBlue">
    <Grid Background="#ffdadada">
        <Border MinWidth="400" Margin="15" Background="White" VerticalAlignment="Center" Padding="30" MaxWidth="750" CornerRadius="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="LightGray" ShadowDepth="0"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <DataGrid Grid.Row="0" Name="DataGridOrders" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Книга" Binding="{Binding Book.Name}" />
                        <DataGridTextColumn Header="Стоимость" Binding="{Binding Cost}" />
                        <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}" />
                        <DataGridTextColumn Header="Итог" Binding="{Binding Result}" />
                        <DataGridTemplateColumn Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Name="ButtonEdit" Content="Редактировать" Click="ButtonEdit_OnClick" Background="White" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Name="ButtonAdd" Content="Добавить" Click="ButtonAdd_OnClick" Width="133" Background="White" Margin="0,0,10,0"/>
                    <Button Name="ButtonReturnToMain" Content="Вернуться на главную страницу" Click="ButtonReturnToMain_OnClick" Width="200" Background="White"/>
                </StackPanel>
                <Button Grid.Row="1" Name="ButtonDel" Content="Удалить" HorizontalAlignment="Right" Click="ButtonDel_OnClick" Width="133" Background="White" />
            </Grid>
        </Border>
    </Grid>
</Page>